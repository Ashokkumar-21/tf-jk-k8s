pipeline {
  agent any

  environment {
    AWS_REGION = 'ap-south-1'
  }

  stages {
    stage('Checkout Code') {
      steps {
        checkout scm
      }
    }

    stage('Terraform Destroy Infra') {
      steps {
        dir('tf-jk-k8s') {
          sh '''
            terraform init
            terraform destroy -auto-approve
          '''
        }
      }
    }
  }
}
